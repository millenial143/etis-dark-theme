{
	"name": "ETIS dark theme",
	"description": "Dark theme for site of PSU",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "scripting"],
	"action":{
		"default_icon": {
			"16": "/images/icon16.png",
			"48": "/images/icon48.png",
			"128": "/images/icon128.png"
		}
	},
	"icons": {
		"16": "/images/icon16.png",
		"48": "/images/icon48.png",
		"128": "/images/icon128.png"
	},
	 "content_scripts": [
	    {
	    	"matches": ["https://student.psu.ru/*"],
	    	"all_frames": true,
	    	"js": ["contentScript.js"],
	    	"css": ["myStyles.css"]
	    }
	]
}